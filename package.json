{
  "name": "peggy-ts",
  "type": "module",
  "license": "Apache-2.0",
  "main": "dist/index.cjs",
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "esbuild": "^0.23.0",
    "ts-jest": "^29.2.2",
    "tsx": "^4.19.1"
  },
  "peerDependencies": {
    "peggy": "^4.0.3",
    "typescript": "^5.5.4"
  },
  "dependencies": {
    "source-map-generator": "^0.8.0",
    "ts-morph": "^23.0.0"
  },
  "scripts": {
    "prepare": "./bin/prepare-runtime.ts",
    "bundle": "mkdir dist &> /dev/null; esbuild index.ts --bundle --platform=node --format=cjs --external:peggy --external:ts-morph --external:typescript --external:source-map-generator > ./dist/index.cjs",
    "clean": "rm -rf dist/ node_modules/ jest.config.js",
    "check": "tsc --noEmit -p ./tsconfig.json --strict",
    "test": "ts-jest config:init &> /dev/null; jest"
  }
}
